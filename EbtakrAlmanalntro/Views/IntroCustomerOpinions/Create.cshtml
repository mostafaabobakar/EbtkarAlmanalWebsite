@model EbtakrAlmanalntro.Models.CustomerOpinionsViewModel.AddCustomerOpinionsViewModel;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-box">
    <h2 class="header-title m-t-0 m-b-30">اضافة رآى</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form enctype="multipart/form-data" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Img" class="control-label">الصورة</label>
                    <input asp-for="Img" class="form-control" />
                    <span asp-validation-for="Img" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NameAr" class="control-label">الاسم بالعربية</label>
                    <input asp-for="NameAr" class="form-control" />
                    <span asp-validation-for="NameAr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NameEn" class="control-label">الاسم بالانجليزية</label>
                    <input asp-for="NameEn" class="form-control" />
                    <span asp-validation-for="NameEn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescriptionAr" class="control-label">الوصف بالعربية</label>
                    <input asp-for="DescriptionAr" class="form-control" />
                    <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescriptionEn" class="control-label">الوصف بالانجليزية</label>
                    <input asp-for="DescriptionEn" class="form-control" />
                    <span asp-validation-for="DescriptionEn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rate" class="control-label">التقييم</label>
                    <input asp-for="Rate" class="form-control" />
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" value="اضافة" class="btn-new-style btn-rounded" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div>
                        <a asp-action="Index" class="btn-black">العودة الى الرئيسية</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
