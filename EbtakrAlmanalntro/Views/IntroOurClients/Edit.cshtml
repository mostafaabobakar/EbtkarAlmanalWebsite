@model EbtakrAlmanalntro.ViewModels.IntroSiteModels.EditOurClientViewModel

@{
    ViewData["Title"] = "تعديل";
}

<div class="card-box">
    <h2 class="header-title m-t-0 m-b-30">@ViewData["Title"]</h2>
    <h5 class="text-center">آراء العملاء</h5>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <input type="hidden" asp-for="IsActive" />
                <input type="hidden" asp-for="ImageUrl" />
                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label">الصورة القديمة</label>
                    <img src="@Model.ImageUrl" width="100" height="100" />
                </div>

                <div class="form-group">
                    <label asp-for="Image" class="control-label">الصورة</label>
                    <input asp-for="Image" value="@Model.Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NameAr" class="control-label">الاسم بالعربية</label>
                    <input asp-for="NameAr" class="form-control" />
                    <span asp-validation-for="NameAr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NameEn" class="control-label">الاسم بالانجليزية</label>
                    <input asp-for="NameEn" class="form-control" />
                    <span asp-validation-for="NameEn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescriptionAr" class="control-label">الوصف بالعربية</label>
                    <input asp-for="DescriptionAr" class="form-control" />
                    <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescriptionEn" class="control-label">الوصف بالانجليزية</label>
                    <input asp-for="DescriptionEn" class="form-control" />
                    <span asp-validation-for="DescriptionEn" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="حفظ" class="btn-new-style btn-rounded" />
                </div>
            </form>

            <a asp-action="Index" class="btn-black">  العودة  للرئيسية</a>
        </div>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
